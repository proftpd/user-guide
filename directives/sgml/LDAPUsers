		<refname>LDAPUsers</refname>
		<refpurpose>Enable LDAP authentication/user lookups</refpurpose>
	</refnamediv>

	<refsynopsisdiv>
		<cmdsynopsis>
			<command>LDAPUsers</command>
			<arg choice="opt">
