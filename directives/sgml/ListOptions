<refnamediv>
<refname>ListOptions</refname>
<refpurpose>Configure options used when listing directories</refpurpose>
</refnamediv>

<refsynopsisdiv>
<cmdsynopsis>
<command>ListOptions</command>
<arg choice="opt">
  <option>"options string"</option>
</arg>
<arg choice="opt">
  <option>["strict"]</option>
</arg>
</cmdsynopsis>

