	<variablelist>
		<title></title>

		<varlistentry>
			<term><synopsis>Default</synopsis></term>
			<listitem><para>
				LDAPSearchScope subtree
			</para></listitem>
		</varlistentry>

		<varlistentry>
			<term><synopsis>Context</synopsis></term>
