<refnamediv>
<refname>TimeoutSession</refname>
<refpurpose>Sets a timeout for an entire session</refpurpose>
</refnamediv>

<refsynopsisdiv>
<cmdsynopsis>
<command>TimeoutSession</command>
<arg choice="opt">
  <option>seconds ["user"|"group"|"class" expression]</option>
</arg>
